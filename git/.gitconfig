[push]
    default = simple

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[core]
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
    editor = vim
    autocrlf = input

[help]
    autocorrect = 1

[alias]
    apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
    undo = reset HEAD~1 --mixed
    amend = commit -a --amend
    discard-changes = reset --hard origin/master
    force-pull = !git fetch --all && git reset --hard origin/master && git clean -df
	d = difftool

[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[diff "json"]
    textconv = python -m json.tool

[credential]
    helper = osxkeychain

